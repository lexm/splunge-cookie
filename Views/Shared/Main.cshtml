@{
    ViewData["Title"] = "Login/Registration";
}
@using splungecookie.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model splungecookie.Models.UserViewModel

<h3>Register</h3>
<form asp-controller="User" asp-action="register" method="POST">
    <h4>
        <label asp-for="name"></label>
        <input asp-for="name">
        <span asp-validation-for="name"></span>        
    </h4>
    <h4>
        <label asp-for="alias"></label>
        <input asp-for="alias">
        <span asp-validation-for="alias"></span>        
    </h4>
    <h4>
        <label asp-for="email"></label>
        <input asp-for="email">
        <span asp-validation-for="email"></span>        
    </h4>
    <h4>
        <label asp-for="password"></label>
        <input asp-for="password">
        <span asp-validation-for="password"></span>        
    </h4>
    <h4>
        <label asp-for="confirm"></label>
        <input asp-for="confirm">
        <span asp-validation-for="confirm"></span>        
    </h4>
    <input type="submit" value="Register">
</form>

<h3>Login</h3>
<form asp-controller="Login" asp-action="login" method="POST">
    <h4>
        <label asp-for="email"></label>
        <input asp-for="email">
        <span asp-validation-for="email"></span>
    </h4>
    <h4>
        <label asp-for="password"></label>
        <input asp-for="password">
        <span asp-validation-for="password"></span>
    </h4>
    <input type="submit" value="Login">
</form>